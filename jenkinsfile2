pipeline {
    agent any
    stages {
        stage('Test Packer Execution') {
            steps {
                script {
                    def packerDir = "${env.WORKSPACE}/packer_installation"
                    sh """
                    mkdir -p ${packerDir}
                    curl -o ${packerDir}/packer_linux_amd64.zip https://releases.hashicorp.com/packer/1.7.3/packer_1.7.3_linux_amd64.zip
                    unzip -o -d ${packerDir} ${packerDir}/packer_linux_amd64.zip
                    chmod +x ${packerDir}/packer
                    ${packerDir}/packer --version
                    """
                }
            }
        }
        stage('Debug') {
            steps {
                sh "echo $PATH"
                sh "which packer"
            }
        }
    }
}